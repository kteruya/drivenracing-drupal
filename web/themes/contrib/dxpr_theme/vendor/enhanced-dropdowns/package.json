{
  "name": "bs-enhanced-dropdowns",
  "displayName": "Bootstrap 5 Enhanced Dropdowns",
  "version": "1.0.2",
  "description": "This project provides an enhanced navigation menu system for Bootstrap 5, featuring split dropdown buttons, multi-level submenus, improved keyboard accessibility, and intelligent handling of link behavior based on the `href` attribute.",
  "type": "module",
  "main": "dist/js/enhanced-dropdowns.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/dxpr/bs-dropdown-extended.git"
  },
  "bugs": {
    "url": "https://github.com/dxpr/bs-dropdown-extended/issues"
  },
  "homepage": "https://github.com/dxpr/bs-dropdown-extended#readme",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky",
    "lint:js": "eslint . --ext .js,.ts,.jsx,.tsx --fix",
    "lint:scss": "stylelint \"src/scss/**/*.scss\" --fix",
    "lint": "npm run lint:js && npm run lint:scss",
    "build:scss:min": "sass src/scss/main.scss dist/css/main.min.css --style compressed --no-source-map && postcss dist/css/main.min.css --replace --use autoprefixer",
    "build:scss:full": "sass src/scss/main.scss dist/css/main.css --style expanded --no-source-map && postcss dist/css/main.css --replace --use autoprefixer",
    "build:scss": "npm run build:scss:min && npm run build:scss:full",
    "build:js:min": "mkdir -p dist/js && terser src/js/enhanced-dropdowns.js -o dist/js/enhanced-dropdowns.min.js --no-source-map",
    "build:js:full": "mkdir -p dist/js && cp src/js/enhanced-dropdowns.js dist/js/",
    "build:js": "npm run build:js:min && npm run build:js:full",
    "build": "npm run build:scss && npm run build:js",
    "watch:scss": "sass --watch src/scss:dist/css --style compressed --no-source-map",
    "watch:scss:postcss": "onchange 'src/scss/**/*.scss' -- npm run build:scss",
    "watch:js": "onchange 'src/js/**/*.js' -- npm run build:js",
    "watch": "concurrently \"npm run watch:scss:postcss\" \"npm run watch:js\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.32.0",
    "@typescript-eslint/parser": "^8.32.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "eslint": "^9.26.0",
    "eslint-config-airbnb-extended": "^1.0.11",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "onchange": "^7.1.0",
    "postcss": "^8.5.3",
    "postcss-cli": "^11.0.1",
    "postcss-scss": "^4.0.9",
    "sass": "^1.87.0",
    "stylelint": "^16.19.1",
    "stylelint-config-standard-scss": "^14.0.0",
    "terser": "^5.39.0",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "eslint --fix"
    ],
    "src/scss/**/*.scss": [
      "stylelint --fix"
    ]
  }
}
